
<div class="text-center mb-4">
  <h2><%= @report.user.username %>様</h2>
  <h3><%= @report.created_at.strftime("%Y年%m月%d日") %>の出来事</h3>
</div> 

<% if @report.errors.any? %>
 <div id="error_explanation">
   <h2><%= pluralize(@report.errors.count, "error") %></h2>
   <ul>
     <% @report.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
 </div>
<% end %>


<div class="row mt-4 pt-4">
  <div class="offset-sm-3 col-sm-6">    
    <%= form_for @report do |f| %>
     
     <div class="form-group">
      <%= f.label :tilte, '要件' %>
      <%= f.text_field :title, class: "form-control input" %>
     </div>
     
     <div class="form-group">
      <%= f.label :body, "特記事項" %>
      <%= f.text_area :body, class: "form-control text-area" %>
     </div>        
      
     <div class="form-group">
      <%= f.label :image, "写真" %>
      <%= f.attachment_field :image, class: "form-control input" %>
     </div>
      
    <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

  


