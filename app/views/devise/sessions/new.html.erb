<div class="container mt-5">
 <div class="row">
   <div class="col-6 mx-auto">
     <h2>ログイン画面</h2>
   
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="form-group">
       <%= f.label :email %>
       <%= f.email_field :email, autofocus: true, :placeholder => "登録したEメールを入れてください", autocomplete: "email", class: 'form-control' %>
     </div>
   
     <div class="form-group">
       <%= f.label :password %>
       <%= f.password_field :password, :placeholder => "登録したパスワードを入れてください", autocomplete: "current-password", class: 'form-control' %>
     </div>
   
     <% if devise_mapping.rememberable? %>
       <div class="field">
         <%= f.check_box :remember_me %>
         <%= f.label :remember_me %>
       </div>
     <% end %>
   
     <div class="actions">
       <%= f.submit "ログインする", class: 'btn btn-primary' %>
     </div>
   <% end %>
   
   <%= render "devise/shared/links" %>
   
   </div>
 </div>
</div>